<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="24dp" android:height="24dp">
        <shape android:shape="oval" android:thicknessRatio="10">

            <gradient
                android:type="radial"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#FF001E"
                android:endColor="#9D1515"
                android:gradientRadius="100%"
                />
        </shape>
    </item>

    <item
        android:drawable="@drawable/round_logout_24"
        android:gravity="center"
        android:width="12dp"
        android:height="12dp"/>
</layer-list>