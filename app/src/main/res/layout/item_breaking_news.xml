<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/breaking_news_image"
            android:layout_width="224dp"
            android:layout_height="124dp"
            android:background="@color/french_grey"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/SmoothImage"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/breaking_news_image_loading"
            android:layout_width="224dp"
            android:layout_height="124dp"
            style="@style/LoadingPlaceholder"/>

    </FrameLayout>
    
    <TextView
        android:id="@+id/tv_breaking_news_title"
        android:layout_width="match_parent"
        android:layout_height="36sp"
        android:text="@string/lorem30"
        style="@style/TextTitle"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"/>

    <TextView
        android:id="@+id/tv_pub_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:text="4 hours ago"
        android:textStyle="bold"
        android:textColor="@color/grey"/>

</LinearLayout>