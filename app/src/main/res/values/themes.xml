<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NewsIn" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_emerald</item>
        <item name="colorPrimaryVariant">@color/green_celadon</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="CircularImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SmoothImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="SmoothBottomImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">36dp</item>
        <item name="cornerSizeBottomRight">36dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>